<p id="notice"><%= notice %></p>

<h1>Admin Site Configs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_site_configs.each do |admin_site_config| %>
      <tr>
        <td><%= admin_site_config.key %></td>
        <td><%= link_to 'Show', admin_site_config_url(admin_site_config) %></td>
        <td><%= link_to 'Edit', edit_admin_site_config_path(admin_site_config) %></td>
        <td><%= link_to 'Destroy', admin_site_config_url(admin_site_config), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site Config', new_admin_site_config_path %>
